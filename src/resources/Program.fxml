<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXHamburger?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="borderpane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ProgramController">
   <top>
      <AnchorPane fx:id="menuPanel" prefHeight="50.0" prefWidth="600.0" styleClass="button" stylesheets="@stiles.css" BorderPane.alignment="CENTER">
         <children>
            <JFXHamburger fx:id="humburger" layoutX="14.0" layoutY="15.0" onMouseClicked="#showMenu" styleClass="jfx-hamburger-icon" stylesheets="@stiles.css" />
            <JFXButton fx:id="addFiles" buttonType="RAISED" layoutX="472.0" layoutY="13.0" onAction="#add" text="Add" />
            <JFXButton fx:id="sendFiles" buttonType="RAISED" layoutX="534.0" layoutY="13.0" onAction="#send" text="Send" />
         </children></AnchorPane>
   </top>
   <left>
      <JFXTreeTableView fx:id="localFilesTable" onDragDropped="#handleDrop" onDragOver="#handleDragOver" styleClass="background" stylesheets="@stiles.css" BorderPane.alignment="LEFT" />
   </left>

   <right>
      <JFXTreeTableView fx:id="remoteFilesTable" styleClass="background" stylesheets="@stiles.css" BorderPane.alignment="RIGHT" />
   </right>
</BorderPane>
